{
  "schemaVersion": 1,
  "id": "lsdc",
  "version": "${version}",

  "name": "Sodium Device Check",
  "description": "SDC will detect your device configuration when using the sodium module as a reference for setting image quality, making it convenient for you to adjust the image quality.  ",
  "authors": [
    "LoongLy"
  ],
  "contact": {
    "sources": "https://github.com/Long-Zixuan/LSDC",
    "issues": "https://github.com/Long-Zixuan/LSDC/issues"
  },

  "license": "LGPLv3",
  "icon": "assets/lsdc/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "loongly.lsdc.client.LSDCClientMod"
    ]
  },
  "custom": {
    "modmenu": {
      "parent": {
        "id": "sodium"
      }
    }
  },
  "mixins": [
    "lsdc.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.10",
    "java": ">=16",

    "sodium": [
      "0.3.x",
      "0.4.0-alpha5",
      "0.4.0-alpha6",
      "0.4.1"
    ]
  },

  "suggests": {
    "reeses-sodium-options": "*"
  },

  "conflicts": {
    "lambdabettergrass": "*"
  }
}
